{
  "name": "wipop/wipop-payment",
  "type": "library",
  "version": "1.0.0",
  "description": "A PHP library for integrating Wipop payment gateway.",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Wipop\\": "src/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5.53",
    "friendsofphp/php-cs-fixer": "3.87",
    "squizlabs/php_codesniffer": "4.0",
    "phpstan/phpstan": "2.1"
  },
  "scripts": {
    "fix:php": "php-cs-fixer fix --allow-risky=yes",
    "lint:phpcs": "phpcs",
    "lint:phpstan": "phpstan analyse --memory-limit=1G"
  }
}
