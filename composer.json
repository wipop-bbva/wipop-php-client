{
  "name": "wipop-bbva/wipop-php-client",
  "type": "library",
  "description": "A PHP library for integrating Wipop payment gateway.",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Wipop\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wipop\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.1.0",
    "guzzlehttp/guzzle": "7.10",
    "symfony/serializer": "^6.4 || ^7.0",
    "symfony/property-info": "^6.4 || ^7.0",
    "symfony/property-access": "^6.4 || ^7.0",
    "symfony/serializer-pack": "^1.3"
  },
  "require-dev": {
    "vlucas/phpdotenv": "5.6.2",
    "phpunit/phpunit": "10.5.58",
    "phpro/grumphp": "2.16.0",
    "friendsofphp/php-cs-fixer": "3.89.1",
    "squizlabs/php_codesniffer": "4.0",
    "phpstan/phpstan": "2.1.31",
    "monolog/monolog": "3.9"
  },
  "scripts": {
    "grumphp-init": [
      "@php -r 'if (getenv(\"CI\")) { echo \"Skipping GrumPHP init on CI\".PHP_EOL; exit(0); } if (!file_exists(\"vendor/bin/grumphp\")) { echo \"Skipping GrumPHP init (binary missing: --no-dev)\".PHP_EOL; exit(0); } $command = escapeshellarg(PHP_BINARY) . \" \" . escapeshellarg(\"vendor/bin/grumphp\") . \" git:init\"; passthru($command, $exitCode); exit($exitCode);'"
    ],
    "post-install-cmd": [
      "@grumphp-init"
    ],
    "post-update-cmd": [
      "@grumphp-init"
    ],
    "fix:php": "php-cs-fixer fix --allow-risky=yes",
    "lint:phpcs": "phpcs",
    "lint:phpstan": "phpstan analyse --memory-limit=1G"
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true
    }
  }
}
